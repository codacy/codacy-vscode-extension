{
  "name": "codacy",
  "displayName": "Codacy",
  "description": "Official Codacy extension for Visual Studio Code",
  "icon": "resources/icons/extension-logo.png",
  "version": "0.0.1",
  "publisher": "Codacy",
  "repository": {
    "type": "git",
    "url": "https://github.com/codacy/codacy-vscode-extension"
  },
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onFileSystem:pr",
    "onFileSystem:githubpr"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codacy-main",
          "title": "Codacy",
          "icon": "resources/icons/codacy-logo.svg"
        }
      ]
    },
    "views": {
      "codacy-main": [
        {
          "id": "codacy:login",
          "name": "Codacy Login",
          "icon": "resources/icons/codacy-logo.svg",
          "when": "Codacy:RepositoryManagerStateContext == NeedsAuthentication"
        },
        {
          "id": "codacy:statuses",
          "name": "Codacy Statuses",
          "icon": "$(library)",
          "when": "(Codacy:RepositoryManagerStateContext != NeedsAuthentication && Codacy:RepositoryManagerStateContext != Loaded) || Codacy:PullRequestStateContext != Loaded"
        },
        {
          "id": "codacy:prSummary",
          "name": "Pull request",
          "when": "Codacy:RepositoryManagerStateContext == Loaded && Codacy:PullRequestStateContext == Loaded",
          "icon": "$(git-pull-request)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "codacy:login",
        "contents": "You have not yet signed in with Codacy\n[Sign in](command:codacy.signIn)",
        "when": "Codacy:RepositoryManagerStateContext == NeedsAuthentication"
      },
      {
        "view": "codacy:statuses",
        "contents": "No repositories open.",
        "when": "Codacy:RepositoryManagerStateContext == NoRepository"
      },
      {
        "view": "codacy:statuses",
        "contents": "No remote repositories configured.",
        "when": "Codacy:RepositoryManagerStateContext == NoRemote"
      },
      {
        "view": "codacy:statuses",
        "contents": "Codacy is initializing...",
        "when": "Codacy:RepositoryManagerStateContext == Initializing"
      },
      {
        "view": "codacy:statuses",
        "contents": "No open pull request found.\n[Try again](command:pr.load)",
        "when": "Codacy:RepositoryManagerStateContext == Loaded && Codacy:PullRequestStateContext == NoPullRequest"
      }
    ],
    "commands": [
      {
        "command": "codacy.signIn",
        "title": "Sign in to Codacy",
        "category": "Codacy commands"
      },
      {
        "command": "codacy.signOut",
        "title": "Sign out from Codacy",
        "category": "Codacy commands"
      },      
      {
        "command": "pr.load",
        "title": "Look for Pull Request",
        "category": "Codacy commands",
        "icon": "$(sync)",
        "when": "Codacy:RepositoryManagerStateContext == Loaded"
      },
      {
        "command": "pr.refresh",
        "title": "Refresh Pull Request",
        "category": "Codacy commands",
        "icon": "$(refresh)",
        "when": "Codacy:PullRequestStateContext == Loaded"
      },
      {
        "command": "pr.openSummary",
        "title": "Open Pull Request Summary",
        "category": "Codacy commands",
        "when": "Codacy:PullRequestStateContext == Loaded"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "pr.load",
          "when": "Codacy:RepositoryManagerStateContext == Loaded"
        },
        {
          "command": "pr.refresh",
          "when": "Codacy:PullRequestStateContext == Loaded"
        }
      ],
      "view/title": [
        {
          "command": "pr.load",
          "when": "view == codacy:statuses",
          "group": "navigation"
        },
        {
          "command": "pr.refresh",
          "when": "view == codacy:prSummary",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Codacy Companion",
      "properties": {
        "codacy.apiToken": {
          "type": "string",
          "description": "API Personal Token"
        }
      }
    },
    "permissions": [
      "git"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "compile-tests": "tsc -p . --outDir out",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "package-visx": "vsce package --out releases",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile-tests && npm run lint",
    "test": "node ./out/test/runTest.js",
    "test:coverage": "c8 npm run test",
    "fetch-api": "curl https://artifacts.codacy.com/api/codacy-api/30.5.23/apiv3.yaml -o ./api-v3/api-swagger.yaml",
    "generate-api": "rm -rf ./src/api/client && openapi --input ./api-v3/api-swagger.yaml --output ./src/api/client --useUnionTypes --indent 2 --client axios && node ./postGenerate.ts",
    "update-api": "npm run fetch-api && npm run generate-api",
    "postinstall": "npm run update-api",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.196",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.4.7",
    "@types/sinon": "^10.0.16",
    "@types/temp": "^0.9.1",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.20.1",
    "c8": "^8.0.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "openapi-typescript-codegen": "^0.25.0",
    "prettier": "^3.0.1",
    "remark": "^14.0.3",
    "sinon": "^15.2.0",
    "temp": "^0.9.4",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.6",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "form-data": "^4.0.0",
    "lodash": "^4.17.21"
  }
}
