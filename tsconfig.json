{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020", "dom"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	]
}
